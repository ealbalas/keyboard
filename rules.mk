# Enable/disable core features
VIA_ENABLE = yes        # VIA remapping support (set to yes if you want VIA)
LTO_ENABLE = yes       # Link-time optimization (saves space)

# Console and debugging
CONSOLE_ENABLE = no    # Enable HID console for debugging
COMMAND_ENABLE = no    # Allow magic keycodes (like Shift+Esc to reset)

# Lighting
RGBLIGHT_ENABLE = no   # Enable simple underglow
RGB_MATRIX_ENABLE = yes # Enable per-key RGB effects (bigger firmware size)

# Advanced features
TAP_DANCE_ENABLE = no  # Enable tap dance (multi-tap/hold actions)
COMBO_ENABLE = no      # Enable key combos (chording)
TRI_LAYER_ENABLE = no  # Enable tri-layer (e.g. Lower+Raise=Adjust)
CAPS_WORD_ENABLE = no  # Enable Caps Word (automatic caps mode)

# Misc
MOUSEKEY_ENABLE = no   # Mouse keys (control mouse with keyboard)
EXTRAKEY_ENABLE = yes  # Enable media keys (volume, play/pause, etc.)

